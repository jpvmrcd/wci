<Page x:Class="wci.App.Views.LoginPage"
      x:ClassModifier="internal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:wci.App.Views"
      xmlns:converters="clr-namespace:wci.App.Converters"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="400"
      d:DataContext="{d:DesignInstance local:LoginPage}"
      Title="LoginPage"
      Height="450"
      Width="400">
    <Page.Resources>
        <converters:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter" />
    </Page.Resources>
    <StackPanel>
        <TextBlock Text="wci"
                   HorizontalAlignment="Center" />

        <TextBlock Text="IP Address"
                   HorizontalAlignment="Left"
                   Margin="0,15,0,0" />
        <TextBox Text="{Binding ViewModel.IpAddress}"
                 x:Name="IpTextBox"
                 Margin="0,0,0,0" />
        <TextBlock Margin="0,0,0,5"
                   Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                   Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=IpTextBox, FallbackValue=''}" />

        <TextBlock Text="Username"
                   HorizontalAlignment="Left"
                   Margin="0,5,0,0" />
        <TextBox Text="{Binding ViewModel.Username}"
                 x:Name="UsernameTextBox"
                 Margin="0,0,0,0" />
        <TextBlock Margin="0,0,0,5"
                   Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                   Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=UsernameTextBox, FallbackValue=''}" />

        <TextBlock Text="Password"
                   HorizontalAlignment="Left"
                   Margin="0,5,0,0" />
        <PasswordBox Grid.Row="6"
                     x:Name="Password"
                     Margin="0,0,0,15" />

        <CheckBox Content="Demo"
                  IsChecked="{Binding ViewModel.IsDemo, Mode=TwoWay}"
                  ToolTipService.InitialShowDelay="200"
                  ToolTipService.Placement="MousePoint"
                  ToolTipService.ToolTip="Use sample data without connecting to OpenWrt."
                  ToolTipService.ShowOnDisabled="True" />

        <Button Content="Log in"
                Command="{Binding ViewModel.LoginCommand}"
                CommandParameter="{Binding ElementName=Password}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Margin="0,15,0,00" />
        <TextBlock FontSize="16"
                   Margin="0,5,0,0"
                   Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                   Visibility="{Binding ViewModel.ErrorMessage, Converter={StaticResource EmptyToVisibilityConverter}}"
                   Text="{Binding ViewModel.ErrorMessage}" />
    </StackPanel>
</Page>
